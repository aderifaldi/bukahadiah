<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/containerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingNormal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/producImage"
            android:layout_width="@dimen/giftItemImageSize"
            android:layout_height="@dimen/giftItemImageSize"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/paddingSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.playground.bukahadiah.customui.textview.CustomTextView
                android:id="@+id/invoiceCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/fontNormal"
                android:text=""
                custom:font="@string/regular"/>

            <com.playground.bukahadiah.customui.textview.CustomTextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/fontMedium"
                android:text=""
                android:maxLines="2"
                custom:font="@string/light"/>

            <com.playground.bukahadiah.customui.textview.CustomTextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/fontMedium"
                android:text=""
                android:maxLines="2"
                custom:font="@string/light"/>

            <com.playground.bukahadiah.customui.textview.CustomTextView
                android:id="@+id/status"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fontSmall"
                android:text=""
                android:maxLines="2"
                android:padding="4dp"
                android:background="@color/colorPrimary"
                custom:font="@string/regular"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_below="@id/containerItem"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"/>

</RelativeLayout>
